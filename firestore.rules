rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Profiles: Users can only read and write to their own profile.
    match /profiles/{userId} {
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
    }

    // Credentials: Users can only manage their own credentials.
    match /credentials/{documentId} {
      allow read, update, delete, create: if request.auth != null && request.auth.uid == request.resource.data.user_id || (resource != null && request.auth.uid == resource.data.user_id);
    }
  }
}
