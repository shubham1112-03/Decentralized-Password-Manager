rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Profiles: Users can only read and write to their own profile.
    match /profiles/{userId} {
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
    }

    // Credentials Collection
    match /credentials {
      // Allow users to query for their own credentials.
      allow list: if request.auth != null && request.query.resource.data.user_id == request.auth.uid;
    }

    // Credentials Documents
    match /credentials/{documentId} {
      // Allow users to create, read, and delete their own credential documents.
      allow read, delete, create: if request.auth != null && request.auth.uid == request.resource.data.user_id;
      // Allow users to update their own credential documents.
      allow update: if request.auth != null && request.auth.uid == resource.data.user_id;
    }
  }
}
