rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Profiles: Users can only read and write to their own profile document.
    match /profiles/{userId} {
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
    }

    // Credentials: Users can only C,R,U,D their own credentials.
    match /credentials/{document=**} {
        allow read, delete: if request.auth != null && resource.data.user_id == request.auth.uid;
        allow create: if request.auth != null && request.resource.data.user_id == request.auth.uid;
    }
  }
}
